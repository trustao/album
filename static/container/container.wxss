/* components/container.wxss */
page{
  width: 100%;
  height: 100%;
}
.container {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding-top: 136rpx;
}
.container.iphoneX {
    padding-top: 180rpx;
}
.container.no-header {
  padding-top: 0!important;
}
.container .header{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 136rpx;
    background: #fff;
}
.container .header .header-cvs{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.container .header .back{
  position: absolute;
  bottom: 20rpx;
  left: 15rpx;
  width: 60rpx;
  height: 60rpx;
  transform: rotateZ(180deg);
}

.container .header .back::before{
  content: '';
  position: absolute;
  top: 12rpx;
  left: 10rpx;
  width: 26rpx;
  height: 4rpx;
  background: #333;
  transform: rotateZ(45deg);
  border-radius: 3rpx;
}
.container .header .back::after{
  content: '';
  position: absolute;
  top: 28rpx;
  left: 10rpx;
  width: 26rpx;
  height: 4rpx;
  background: #333;
  transform: rotateZ(-45deg);
  border-radius: 3rpx;
}

.container .header .back.no{
  display: none;
}
.container.iphoneX .header {
  height: 180rpx;
}
.container .main{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}
