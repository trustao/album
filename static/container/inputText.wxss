/* components/inputText.wxss */
.textarea-wrap{
  position: fixed;
  box-sizing: border-box;
  width: calc(100% - 10px);
  left: 50%;
  z-index: 9999;
  transform: translateX(-50%);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.textarea-wrap textarea{
  width: calc(100% - 160rpx);
  font-size: 44rpx;
  height: 100rpx;
  padding: 10rpx;
  background: #fff;
  border: 2px solid;
  border-radius: 14rpx;
}
.textarea-complete{
  width: 120rpx;
  height: 120rpx;
  background: #FFE200;
  color: #000;
  border: 2px solid;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

